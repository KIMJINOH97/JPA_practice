{{>layout/header}}

<h1>회원 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">회원 번호</label>
                <input type="text" class="form-control" id="id" value="{{member.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">이름</label>
                <input type="text" class="form-control" id="name" value="{{member.name}}">
            </div>
            <div class="form-group">
                <label for="title">나이</label>
                <input type="text" class="form-control" id="age" value="{{member.age}}">
            </div>
            <div class="form-group">
                <label for="title">속한 팀</label>
                <input type="text" class="form-control" id="team" value="{{member.teamName}}">
            </div>
            <div class="form-group">
                <label for="title">도시</label>
                <input type="text" class="form-control" id="city" value="{{member.address.city}}">
            </div>
            <div class="form-group">
                <label for="title">구</label>
                <input type="text" class="form-control" id="gu" value="{{member.address.gu}}">
            </div>
            <div class="form-group">
                <label for="title">동</label>
                <input type="text" class="form-control" id="dong" value="{{member.address.dong}}">
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}